@model ISchoolWebApp01.Models.PeopleModel
@{
    ViewData["Title"] = @Model.pageTitle;
}
<h1>@Model.title</h1>
<div>@Model.subTitle</div>
<hr/>

<div id="pepEverything" style="display:none">
    <div id="tabTest">
        <ul>
            <li><a href="#faculty">Faculty</a></li>
            <li><a href="#staff">Staff</a></li>
        </ul>
        <div id="staff">
            @foreach (var staff in @Model.faculty)
            {
                <div class="person">
                    <img src="@staff.imagePath" alt="pic" />
                    <h3 style="font-size:small">
                        @staff.name
                    </h3>
                    <h3 style="font-size:small">
                        @staff.title
                    </h3>
                    <h3 style="font-size:small">
                        @staff.office
                    </h3>
                    <h3 style="font-size:small">
                        @staff.phone
                    </h3>
                    <h3 style="font-size:small">
                        @staff.email
                    </h3>
                    @if (staff.website != "")
                    {
                        <h3 style="font-size:small"></h3>
                        <a href="@staff.website" target="_blank">My Site</a>
                    }
                </div>
            }
        </div>
        <div id="faculty">
            @foreach (var faculty in @Model.faculty)
            {
                <div class="person">
                    <img src="@faculty.imagePath" alt="pic" />
                    <h3 style="font-size:small">
                        @faculty.name
                    </h3>
                    <h3 style="font-size:small">
                        @faculty.title
                    </h3>
                    <h3 style="font-size:small">
                        @faculty.office
                    </h3>
                    <h3 style="font-size:small">
                        @faculty.phone
                    </h3>
                    <h3 style="font-size:small">
                        @faculty.email
                    </h3>
                    @if (faculty.website != "")
                    {
                        <h3 style="font-size:small"></h3>
                        <a href="@faculty.website" target="_blank">My Site</a>
                    }
                </div>
            }
        </div>
    </div>

    <div id="accTest">
        <h3>Faculty</h3>
        <div>
            @foreach (var faculty in @Model.faculty)
            {
                <div class="person">
                    <img src="@faculty.imagePath" alt="pic" />
                    <h3 style="font-size:small">
                        @faculty.name
                    </h3>
                    <h3 style="font-size:small">
                        @faculty.title
                    </h3>
                    <h3 style="font-size:small">
                        @faculty.office
                    </h3>
                    <h3 style="font-size:small">
                        @faculty.phone
                    </h3>
                    <h3 style="font-size:small">
                        @faculty.email
                    </h3>
                    @if (faculty.website != "")
                    {
                        <h3 style="font-size:small"></h3>
                        <a href="@faculty.website" target="_blank">My Site</a>
                    }
                </div>
            }
        </div>

        <h3>Staff</h3>
        <div>
            @foreach (var staff in @Model.faculty)
            {
                <div class="person">
                    <img src="@staff.imagePath" alt="pic" />
                    <h3 style="font-size:small">
                        @staff.name
                    </h3>
                    <h3 style="font-size:small">
                        @staff.title
                    </h3>
                    <h3 style="font-size:small">
                        @staff.office
                    </h3>
                    <h3 style="font-size:small">
                        @staff.phone
                    </h3>
                    <h3 style="font-size:small">
                        @staff.email
                    </h3>
                    @if (staff.website != "")
                    {
                        <h3 style="font-size:small"></h3>
                        <a href="@staff.website" target="_blank">My Site</a>
                    }
                </div>
            }
        </div>
    </div>
</div>